{
  "name": "@orchxtra/koa-helper",
  "version": "0.1.0",
  "description": "Koa higher order function helpers",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "test": "NODE_ENV=test LOG_LEVEL=debug nyc mocha",
    "clean": "rm -rf lib && rm -rf .nyc_output && rm -rf coverage",
    "prepare": "npm run build"
  },
  "keywords": [
    "koa"
  ],
  "author": "Toan Nguyen",
  "license": "ISC",
  "dependencies": {
    "@types/bytes": "^3.0.0",
    "@types/knex": "^0.14.9",
    "@types/koa": "^2.0.45",
    "axios": "^0.18.0",
    "bytes": "^3.0.0",
    "knex": "^0.14.6",
    "koa": "^2.5.0",
    "passthrough-counter": "^1.0.0",
    "@types/nock": "^9.1.3",
    "nock": "^9.2.5"
  },
  "devDependencies": {
    "tslint": "^5.9.1",
    "tslint-consistent-codestyle": "^1.13.0",
    "tslint-eslint-rules": "^5.1.0",
    "typescript": "^2.8.1"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
